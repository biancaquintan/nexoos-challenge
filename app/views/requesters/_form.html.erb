      <h2><%= pluralize(requester.errors.count, "error") %> prohibited this requester from being saved:</h2>

      <ul>
      <% requester.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-12">
    <%= form.text_field :company_name, placeholder: 'RazÃ£o Social', class:'col-md-5' %>
    <%= form.text_field :cnpj, placeholder: 'CNPJ', class:'col-md-5' %>
  </div>

  <%= link_to_add_association 'Add Address', form, :addresses, 
