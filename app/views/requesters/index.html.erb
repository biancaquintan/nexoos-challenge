<%= link_to new_requester_path, class:'btn btn-info mb-5 float-right' do %>
  <i class="fa fa-plus"></i> Novo Solicitante
<% end %>
<h1>Solicitantes Cadastrados</h1>
<table class="table">
  <thead>
    <tr>
      <th>Raz√£o Social</th>
      <th>CNPJ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requesters.each do |requester| %>
      <tr>
        <td><%= requester.company_name %></td>
        <td><%= requester.cnpj %></td>
        <td>
          <%= link_to 'Ver', requester, class:'btn btn-sm btn-primary' %>
