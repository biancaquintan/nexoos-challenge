<div class="nested-fields">
  <div class="col-md-12 mb-3">
    <%= f.text_field :street, placeholder: 'Rua', class:'col-md-8' %>
    <%= f.text_field :number, placeholder: 'Nº', class:'col-md-1 mb-3' %>

    <%= f.text_field :city, placeholder: 'Cidade', class:'col-md-3' %>
    <%= f.text_field :state, placeholder: 'Estado', class:'col-md-3' %>
    <%= f.text_field :cep, placeholder: 'CEP', class:'col-md-3' %>

    <%= link_to_remove_association f, class: 'btn btn-sm btn-danger pl-3 pr-3', title:'Remover Endereço' do %>
      <b>-</b>
    <% end %>
  </div>
</div>
