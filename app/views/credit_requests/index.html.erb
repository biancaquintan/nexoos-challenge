<p id="notice"><%= notice %></p>

<h1>Credit Requests</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Taxa</th>
      <th>Periods</th>
      <th>Requester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_requests.each do |credit_request| %>
      <tr>
        <td><%= credit_request.value %></td>
        <td><%= credit_request.taxa %></td>
        <td><%= credit_request.periods %></td>
        <td><%= credit_request.requester_id %></td>
        <td><%= link_to 'Show', credit_request %></td>
        <td><%= link_to 'Edit', edit_credit_request_path(credit_request) %></td>
        <td><%= link_to 'Destroy', credit_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

